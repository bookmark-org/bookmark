<!-- Add Archive -->
  <div class="display-box">
    <div>
      <h1 class="display-box-headline">Archive a link</h1>
    </div>
    <div class="donate-subheadline">
      <div class="bullet">No login required <em><small><span style="color: gray">anonymously archive a link</span></small></em></div>
    </div>
    <div class="archive-input">
      <%= form_tag("/archive", method: :post) %>
      <input
        class="add_archive_input"
        style="background-color: white; color: black; height: 66px; margin-bottom: 23px; "
        type="url"
        name="url"
        id="url"
        placeholder="https://example.com (paste link here)"
        pattern="https?://.*"
        size="30"
        required
      />
    </div>
    <button class="donate-button" type="submit" onclick="showSpinner()">Add archive</button>
  </div>

<%= if @current_user do %>
  <!-- <%= link "Profile", to: Routes.user_settings_path(@conn, :edit) %> | -->
  (<%= link("Log out", to: Routes.user_session_path(@conn, :delete), method: :delete) %>)
<% else %>

  <!-- Create account -->
  <div class="display-box">
    <div>
      <img src="/images/white-globe.png" style="float: right; width: 233px ">
      <h1 class="display-box-headline">Create an account</h1>
    </div>
    <div class="donate-subheadline">
      <div class="bullet">‚úîÔ∏è Custom profile <em><small><span style="color: gray">bookmark.org/@username</span></small></em></div>
      <div class="bullet">‚úîÔ∏è Bulk archives <em><small><span style="color: gray">archive unlimited URLs</span></small></em></div>
      <div class="bullet">‚úîÔ∏è AI summarizer <em><small><span style="color: gray">integrated with GPT-3 from OpenAI</span></small></em></div>
      <div class="bullet">‚úîÔ∏è Lightning web wallet <em><small><span style="color: gray">receive bitcoin payments</span></small></em></div>
      <div class="bullet">‚úîÔ∏è Nostr identity <em><small><span style="color: gray">import from Nostr, post to Nostr</span></small></em></div>
    </div>
    <div class="donate-action">
      <button class="donate-button" type="submit">Create an account</button> or <%= link("login", to: Routes.user_session_path(@conn, :new)) %> to your existing account</div>
  </div>

<% end %>

<!-- Recent Archives -->
<div class="display-box">
  <h1 class="display-box-headline">Recently archived</h1>
  <table>
    <tr>
      <%= for a <- @archives do %>
        <td>
          <%= link(
            img_tag(
              Routes.static_path(@conn, "/archive/archive/" <> a.name <> "/screenshot.png"),
              class: "thumbnail"
            ),
            to: "/archive/" <> a.name
          ) %>
        </td>
      <% end %>
    </tr>
  </table>
</div>

<!-- Donate -->
<div class="display-box">
  <div>
    <h1 class="display-box-headline"><img class="small-logo" src="/images/bookmark-icon-transparent.png">Donate to Bookmark</h1>
  </div>
  <div class="donate-subheadline">
    ‚ö° Send sats to support independent internet archives.<br>
    <em><small><span style="color: gray">Your donations pay for bandwidth, compute, storage, and funding of bounties for open source developers that work on this project.</span></small></em>
  </div>
  <div class="donate-action">
    <button class="donate-button">Donate now</button>
  </div>
</div>

<!-- Top Users -->
<div class="display-box">
  <h1 class="display-box-headline">üë§ Top users</h1>
</div>

<div id="loading" class="loading"></div>
<script>
  var loadingDiv = document.getElementById('loading');
  var url = document.getElementById('url');
  console.log(url);
  function showSpinner() {
    if (url.value != "") {
      loadingDiv.style.visibility = 'visible';
    }
  }
</script>
